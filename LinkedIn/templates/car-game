    }
    #game {
      position: relative;
      width: 320px;
      height: 560px;
      background: #222;
      overflow: hidden;
      border-radius: 15px;
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.2);
    }
    #road {
      position: absolute;
      width: 100%;
      height: 100%;
      background: repeating-linear-gradient(
        #2c2c2c,
        #2c2c2c 40px,
        #1a1a1a 40px,
        #1a1a1a 80px
      );
      animation: roadMove 1s linear infinite;
    }
    @keyframes roadMove {
      from { background-position-y: 0; }
      to { background-position-y: 80px; }
    }
    #car {
      position: absolute;
      bottom: 20px;
      left: 135px;
      width: 50px;
      height: 100px;
      background: linear-gradient(to bottom, red, darkred);
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(255,0,0,0.5);
      transition: left 0.1s ease-in-out;
    }
    .obstacle {
      position: absolute;
      width: 50px;
      height: 100px;
